<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1" >

    <TextView
        android:id="@+id/swifto_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Swifto Contacts"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/swifto_contact"
        android:background="#356289" />

    <LinearLayout
        android:id="@+id/hr_schedual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swifto_contact"
        android:background="#FFFFFF"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:weightSum="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:paddingBottom="1dp"
            android:paddingRight="1dp" >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="HR"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt1"
                android:text="@string/hr_phno"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btn_hr_sms"
                android:layout_width="@dimen/WalkInfo.ButtonSize"
                android:layout_height="@dimen/WalkInfo.ButtonSize"
                android:layout_toLeftOf="@+id/btn_hr_mail_icon"
                android:layout_centerHorizontal="true"
                 android:layout_margin="@dimen/WalkInfo.MarginButtons"
                android:background="@drawable/bt_sms" />
            
            <ImageView
                android:id="@+id/btn_hr_mail_icon"
                android:layout_width="@dimen/WalkInfo.ButtonSize"
                android:layout_height="@dimen/WalkInfo.ButtonSize"
                android:layout_alignParentRight="true"
                 android:layout_margin="@dimen/WalkInfo.MarginButtons"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mail_icon" />
            
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#909090" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:paddingBottom="1dp" >

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Scheduling"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt3"
                android:text="@string/scheduling_phno"
                android:textColor="#000000"
                android:textSize="12sp" />

             <ImageView
                android:id="@+id/btn_schedual_mail_icon"
                android:layout_width="@dimen/WalkInfo.ButtonSize"
                android:layout_height="@dimen/WalkInfo.ButtonSize"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                 android:layout_margin="@dimen/WalkInfo.MarginButtons"
                android:background="@drawable/mail_icon" />
            <ImageView
                android:id="@+id/btn_schedual_sms"
                android:layout_width="@dimen/WalkInfo.ButtonSize"
                android:layout_height="@dimen/WalkInfo.ButtonSize"
                android:layout_toLeftOf="@+id/btn_schedual_mail_icon"
                android:layout_centerHorizontal="true"
                 android:layout_margin="@dimen/WalkInfo.MarginButtons"
                android:background="@drawable/bt_sms" />
            
           
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/clients"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/hr_schedual"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:text="Clients"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        android:layout_below="@+id/clients"
        android:background="#356289" />

    <RelativeLayout
        android:id="@+id/contact_fragment_schedule_week_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/clients"
        android:layout_marginTop="5dp" >

        <ExpandableListView
            android:id="@+id/contact_fragment_schedule_week_expandable_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@android:color/transparent"
            android:childDivider="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:groupIndicator="@android:color/transparent" >
        </ExpandableListView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contact_fragment_schedule_week_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/popup_background"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateOnly="true" />
    </LinearLayout>

</RelativeLayout>