<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/walk_map_bg_top"
    android:paddingBottom="@dimen/WindowTitle.MarginsTopBottom"
    android:paddingTop="@dimen/WindowTitle.MarginsTopBottom" >

    <TextView
        android:id="@+id/window_title_txt_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/WindowTitle.MarginsSides"
        android:layout_marginRight="@dimen/WindowTitle.MarginsSides"
        android:text="Swifto"
        android:layout_toRightOf="@+id/window_title_bt_slidemenu1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/window_title_bt_slidemenu1"
        style="@style/Swifto.Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
      
        android:layout_marginRight="@dimen/WindowTitle.MarginsSides"
        android:layout_marginLeft="@dimen/WindowTitle.MarginsSides"
        android:background="@drawable/menu_list2" />

    <Button
        android:id="@+id/window_title_bt_right1"
        style="@style/Swifto.Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@id/window_title_bt_left"
        android:layout_alignBottom="@id/window_title_bt_left"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/arrow__eldiv_final" />

    <Button
        android:id="@+id/window_title_bt_left1"
        style="@style/Swifto.Button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/WindowTitle.MarginsSides"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/window_title_bt_slidemenu"
        android:background="@drawable/ic_launcher" />

</RelativeLayout>