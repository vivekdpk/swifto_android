<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/walk_map_bg_top"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <ImageView
            android:id="@id/activity_walk_map_img_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/dog_default" />
        
        <ImageView
            android:id="@+id/activity_walk_map_img_dog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/activity_walk_map_img_dog"
            android:src="@drawable/dog_default" />

        <ImageView
            android:id="@+id/activity_walk_map_img_dog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/activity_walk_map_img_dog1"
            android:src="@drawable/dog_default" />

        <ImageView
            android:id="@+id/activity_walk_map_img_dog3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/activity_walk_map_img_dog2"
            android:src="@drawable/dog_default" />

        <ImageView
            android:id="@+id/activity_walk_map_img_dog4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/activity_walk_map_img_dog3"
            android:src="@drawable/dog_default" />

        <TextView
            android:id="@+id/activity_walk_map_txt_dog_names"
            style="@style/WalkMap.Text.Names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/activity_walk_map_img_dog4"
            android:text="REXI" />

        <TextView
            android:id="@id/activity_walk_map_txt_info"
            style="@style/WalkMap.Text.Durations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/activity_walk_map_txt_dog_names"
            android:layout_below="@id/activity_walk_map_txt_dog_names"
            android:text="30 Min Walk" />

        <ProgressBar
            android:id="@id/activity_walk_map_progress_walk"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/WalkMap.ProgressBar.Width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
           android:layout_marginTop="3dp"
            android:layout_below="@id/activity_walk_map_txt_info"
            android:layout_marginLeft="@dimen/WalkMap.MarginSidesCountdown"
            android:layout_toLeftOf="@id/activity_walk_map_txt_countdown"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:paddingBottom="@dimen/WalkMap.ProgressBar.Margins"
            android:paddingTop="@dimen/WalkMap.ProgressBar.Margins" />

        <TextView
            android:id="@id/activity_walk_map_txt_countdown"
            style="@style/WalkMap.Text.Durations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activity_walk_map_progress_walk"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/activity_walk_map_progress_walk"
            android:layout_marginLeft="@dimen/WalkMap.MarginSidesCountdown"
            android:layout_marginRight="@dimen/WalkMap.MarginSidesCountdown"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="0 min walked" />
        
        <TextView
            android:id="@+id/activity_walk_map_txt_gpsoff"
            style="@style/WalkMap.Text.Durations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_alignParentLeft="true"
            android:text="Your swifto walk has been paused until the GPS is enabled"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/WalkMap.MarginSidesCountdown"
            android:layout_marginRight="@dimen/WalkMap.MarginSidesCountdown"
            android:layout_below="@id/activity_walk_map_progress_walk"
            android:gravity="center_vertical"
            android:maxLines="1"
            />


        <TextView
            android:id="@+id/activity_walk_map_txt_gpsloading"
            style="@style/WalkMap.Text.Durations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_alignParentLeft="true"
            android:text="GPS is loading"
android:visibility="gone"
            android:layout_marginLeft="@dimen/WalkMap.MarginSidesCountdown"
            android:layout_marginRight="@dimen/WalkMap.MarginSidesCountdown"
            android:layout_below="@id/activity_walk_map_txt_gpsoff"
            android:gravity="center_vertical"
            android:maxLines="1"
            />
        
    </RelativeLayout>

    <RelativeLayout
