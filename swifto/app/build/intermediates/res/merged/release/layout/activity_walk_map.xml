        <Button
            android:id="@id/activity_walk_map_bt_stop_walk"
            style="@style/Swifto.Button.Text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/WalkMap.MarginBottomButtonsStartStop"
            android:layout_marginLeft="@dimen/WalkMap.MarginSidesButtonsStartStop"
            android:layout_marginRight="@dimen/WalkMap.MarginSidesButtonsStartStop"
            android:background="@drawable/button_blue"
            android:text="@string/activity_walk_map_bt_stop_walk" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <RelativeLayout
            android:id="@id/activity_walk_map_layout_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/WalkMap.PaddingBottomButtonBottom"
            android:paddingTop="@dimen/WalkMap.PaddingTopButtonsBottom"
            android:visibility="visible" >

            <ImageButton
                android:id="@id/activity_walk_map_bt_play"
                android:layout_width="@dimen/WalkMap.WidthButtonBottom"
                android:layout_height="@dimen/WalkMap.HeightButtonBottom"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/WalkMap.MarginSidesButtonBottom"
                android:background="@drawable/activity_walk_map_bt_play" />

            <ImageButton
                android:id="@id/activity_walk_map_bt_poo"
                android:layout_width="@dimen/WalkMap.WidthButtonBottom"
                android:layout_height="@dimen/WalkMap.HeightButtonBottom"
                android:layout_toRightOf="@id/activity_walk_map_bt_play"
                android:background="@drawable/activity_walk_map_bt_poo" />

            <Button
                android:id="@+id/activity_walk_map_bt_take_video"
                style="@style/Swifto.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/WalkMap.HeightButtonBottom"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/activity_walk_map_bt_poo"
                android:layout_marginRight="@dimen/WalkMap.MarginSidesButtonBottom"
                android:background="@drawable/activity_walk_map_bt_take_pic"
                android:text="@string/activity_walk_map_take_video" />
            
            <Button
                android:id="@+id/activity_walk_map_bt_text_client"
                style="@style/Swifto.Button.Text"
                android:layout_width="@dimen/WalkMap.WidthButtonBottom"
                android:layout_height="@dimen/WalkMap.HeightButtonBottom"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/activity_walk_map_bt_poo"
                android:layout_marginRight="@dimen/WalkMap.MarginSidesButtonBottom"
                android:background="@drawable/textclienticon"
                 />
            
            <Button
                android:id="@id/activity_walk_map_bt_take_pic"
                style="@style/Swifto.Button.Text"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/WalkMap.HeightButtonBottom"
                android:layout_marginLeft="3dp"
                
                android:layout_marginRight="@dimen/WalkMap.MarginSidesButtonBottom"
                android:background="@drawable/activity_walk_map_bt_take_pic"
                android:layout_toRightOf="@+id/activity_walk_map_bt_text_client"
                android:text="@string/activity_walk_map_take_picture" 
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/activity_walk_map_layout_searching"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@id/activity_walk_map_txt_searching"
                style="@style/Swifto.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_walk_map_searching" />

            <ProgressBar
                android:id="@id/activity_walk_map_progress_searching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:indeterminate="true"
                android:indeterminateOnly="true" />
        </LinearLayout>
    </RelativeLayout>

