<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/walk_map_bg_top"
    android:divider="@android:color/white"
    android:dividerPadding="3dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@id/activity_walk_end_txt_title"
            style="@style/Swifto.Text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/activity_walk_end_txt_title"
            android:textSize="14sp" />

        <Button
            android:id="@id/activity_walk_end_bt_take_photo"
            style="@style/Swifto.Button.Text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_blue"
            android:drawableLeft="@drawable/exclamation_mark_small_2"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|left"
            android:minHeight="@dimen/WalkEnd.HeightButtons"
            android:text="@string/activity_walk_end_txt_take_photo"
            android:textSize="18sp" />

        <Button
            android:id="@id/activity_walk_end_bt_send_data"
            style="@style/Swifto.Button.Text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bt_blue"
            android:drawableLeft="@drawable/exclamation_mark_small_2"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|left"
            android:minHeight="@dimen/WalkEnd.HeightButtons"
            android:text="@string/activity_walk_end_txt_send_data"
            android:textSize="18sp" />

        <Button
            android:id="@id/activity_walk_end_bt_send_message"
            style="@style/Swifto.Button.Text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bt_blue"
            android:drawableLeft="@drawable/exclamation_mark_small_2"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|left"
            android:minHeight="@dimen/WalkEnd.HeightButtons"
            android:text="@string/activity_walk_end_txt_send_message"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@id/activity_walk_end_bt_stop_walk"
            style="@style/Swifto.Button.Text"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/WalkEnd.HeightButtons"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bt_green"
            android:text="@string/activity_walk_end_bt_end_walk" />
    </LinearLayout>

</LinearLayout>