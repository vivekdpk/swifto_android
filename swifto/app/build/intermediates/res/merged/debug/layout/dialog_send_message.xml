<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_marginLeft="@dimen/Popup.SendMessage.Side.Margins"
    android:layout_marginRight="@dimen/Popup.SendMessage.Side.Margins"
    android:background="@drawable/shape_popup_send_message" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       android:id="@+id/msg"
        android:layout_weight="0.13"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
    <TextView
        android:id="@id/popup_send_message_txt_info"
        style="@style/Swifto.Text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_send_message_top"
        android:gravity="left"
        android:paddingLeft="@dimen/Popup.SendMessage.Input.Side.Margins"
        android:text="@string/popup_send_message_walk_complete" />

    <EditText
        android:id="@+id/popup_send_message_input_message"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/popup_send_message_txt_info"
        android:layout_marginBottom="@dimen/Popup.SendMessage.Margins.Vertical"
        android:layout_marginLeft="@dimen/Popup.SendMessage.Input.Side.Margins"
        android:layout_marginRight="@dimen/Popup.SendMessage.Input.Side.Margins"
        android:layout_marginTop="@dimen/Popup.SendMessage.Margins.Vertical"
        android:background="@drawable/shape_edit_text_round_corner"
        android:gravity="top"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines ="12"
        android:hint="@string/popup_send_message_hint"
        />

    </LinearLayout>
    <Button
        android:id="@+id/popup_send_message_bt_send"
        style="@style/Swifto.Button.Text"
        android:layout_width="fill_parent"
        android:layout_weight="0.87"
        android:layout_height="fill_parent"
        android:layout_below="@+id/msg"
        android:layout_marginLeft="@dimen/Popup.SendMessage.Input.Side.Margins"
        android:layout_marginRight="@dimen/Popup.SendMessage.Input.Side.Margins"

        android:background="@drawable/bt_green"
        android:gravity="center"
        android:text="@string/popup_send_message_bt_send" />

</LinearLayout>