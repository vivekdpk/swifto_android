<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- <android.support.v4.view.ViewPager android:id="@id/activity_schedule_view_pager" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" > -->
    <!-- </android.support.v4.view.ViewPager> -->

  <!--  xmlns:app="http://schemas.android.com/apk/res/com.haski.swifto"-->

    

    <net.peterkuterna.android.apps.swipeytabs.SwipeyTabs
        android:id="@+id/swipeytabs"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/WindowTitle.Height"
        android:background="@color/walk_map_bg_top"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        app:bottomBarColor="#ffffffff"
        app:bottomBarHeight="2dip"
        app:tabIndicatorHeight="4dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.12" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.88" 
            android:background="#F3F3F3"
            android:id="@+id/logout">
            
            <View android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#B2B2B2"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout_bt_logout"
                android:textColor="#346EA6"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                />
            
            <TextView 
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout_bt_logout"
                android:layout_centerInParent="true"
                android:textColor="#346EA6"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="22sp"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>