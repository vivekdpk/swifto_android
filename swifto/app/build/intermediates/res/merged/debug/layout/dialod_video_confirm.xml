<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

     <VideoView
        android:id="@+id/videoPreview"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/dialog_video_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoPreview"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="This video will be sent to the dog owner by email. Please be sure this is a good video of the dog. If not, please hit cancel"
        android:textColor="#FFF" />

   
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_video_text"
        android:layout_marginTop="5dp"
        android:weightSum="1" >

        <Button
            android:id="@+id/dialog_video_ButtonOK"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text=" Ok " />

        <Button
            android:id="@+id/dialog_video_ButtonCancle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancel" />
    </LinearLayout>

</RelativeLayout>